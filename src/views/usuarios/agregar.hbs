<div class="container" p-4>
     <div class="row">
        <center>
        <div class="col-md-6">
            <div class="card" >
                
                <div class="card-bady">
                    <center>
                    <form action=" " method="POST">
                        <div class="form-group">
                            <h1><label for="">Usuarios</label></h1>
                        </div>
                        <br>
                        <div class="form-group"></div>
                            <input type="text" class="form-control" name="nombre" id="" placeholder="Nombre">    
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="number" class="form-control" name="apellido" id="" placeholder="Apellido">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="number" class="form-control" name="edad" id="" placeholder="Edad">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block"> Agregar</button>
                        </div>
                    </form>
                    </center>
                </div>
               
            </div>
        </div>
         </center>

	<td><a href="mostrar" class="btn btn-primary">Productos mas vendidos</a></td>

        <div class="col-md-8">
            <div class="card-body">
                <h1>Usuarios</h1>
               <table class="table table-dark">
                    <thead>
                        <tr class="table-active">
                        <th scope="col">id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                       
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr class="table-active">
                        <th scope="row">{{id}}</th>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{edad}}</td>
                        <td><a href="agregar/{{id}}" class="btn btn-primary">editar</a></td>
                        <td><a href="delete/{{id}}" class="btn btn-danger">eliminar</a></td>
                        
                        </tr>
                        {{/each}}
                    </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>